BarPanel component with Bar=@InputFoo.Bar

@code {
    [Parameter]
    public Foo InputFoo { get; set; } = null!;

    private ScopeTimer RenderTimer { get; } = new("BarPanel");

    protected override void OnInitialized() => OnParametersSet();
    protected override void OnParametersSet()
    {
        RenderTimer.Init();
    }

    protected override void OnAfterRender(bool _)
    {
        RenderTimer.Dispose();
    }

}
