@using Sz.BlazorRerenderReducers
<div style="display:flex;">
    @foreach (int i in Enumerable.Range(0, 1000))
    {
    <div style="display: none;">@i</div>
    }
</div>

<span>
    MainPanel Bar=@InputFoo.Bar
    <NestedPanel InputFoo="@InputFoo" />
</span>
@code {
    [Parameter] public Foo InputFoo { get; set; } = null!;
    private ScopeTimer RenderTimer { get; } = new("BarPanelWithDisplayHash");
    protected override void OnInitialized() => OnParametersSet();
    protected override void OnParametersSet() => RenderTimer.Init();
    protected override void OnAfterRender(bool firstRender) => RenderTimer.Dispose();
}
